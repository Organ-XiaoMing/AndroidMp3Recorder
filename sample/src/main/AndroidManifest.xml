<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.czt.mp3recorder.sample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="20" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name="com.czt.mp3recorder.sample.ui.SoundRecordActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".SoundRecordService"></service>
        <activity android:name=".ui.SoundRecordListActivity">
            <intent-filter>
                <action android:name="com.intent.view.recordlist" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
               <activity android:name=".ui.SoundRecordCheckListActivity">
                    <intent-filter>
                       <action android:name="com.intent.view.recordchecklist" />
                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
               <activity android:name=".ui.SoundRecordPlayActivity">
                   <intent-filter>
                       <action android:name="com.intent.view.recordplay" />
                       <category android:name="android.intent.category.DEFAULT" />
                   </intent-filter>
               </activity>

    </application>

</manifest>